<script> 

function Slider(slider){
    if (!(slider instanceof Element)) {
        throw new Error('No slider passed in');
    }
    // create some variables for working with slider

    // select the elements needed for the slider
    let currentPosition;
    let currentSlider;
    let prevSlide;
    let prevSlider; 
    let nextSlide;
    let nextSlider;

    const left = document.querySelector('.left');
    const right = document.querySelector('.right');
    const up = document.querySelector('.up');
    const down = document.querySelector('.down');

    function startSlider() {
        currentSlider = slider.querySelector('.slider0') || slider.firstElementChild;
        prevSlider = currentSlider.previousElementSibling || slider.lastElementChild;
        nextSlider = currentSlider.nextElementSibling || slider.firstElementChild;
        currentSlide = currentSlider.firstElementChild;
        prevSlide = currentSlide.previousElementSibling || currentSlider.lastElementChild;
        nextSlide = currentSlide.nextElementSibling || currentSlider.firstElementChild;

    };
    
    function updateVariables() {
        currentSlide = currentSlider.querySelector('.slide0') || currentSlider.firstElementChild;
        prevSlide = currentSlide.previousElementSibling || currentSlider.lastElementChild;
        nextSlide = currentSlide.nextElementSibling || currentSlider.firstElementChild;
    }

    // when this slider is created run the start slider function -- Constructor
      
    /*
    function removeClasses() {
            prevSlider.classList.remove('prevSlider');
            currentSlider.classList.remove('currentSlider');
            nextSlider.classList.remove('nextSlider');
    }
    */
    function applyClasses() {

            prevSlide.classList.add('prevSlide');
            currentSlide.classList.add('currentSlide');
            nextSlide.classList.add('nextSlide');

        prevSlider.classList.add('prevSlider');
        currentSlider.classList.add('currentSlider');
        nextSlider.classList.add('nextSlider');
    };

    function removeSliderClasses(direction) {
            const classesToRemove = ['prevSlider', 'currentSlider', 'nextSlider'];
            const classesToRemove2 = ['prevSlide', 'currentSlide', 'nextSlide'];
            if (direction === 'up' || direction === 'down') {
                prevSlider.classList.remove(...classesToRemove);
                currentSlider.classList.remove(...classesToRemove);
                nextSlider.classList.remove(...classesToRemove);
                updateVariables();
            }
            else if (direction === 'left' || direction === 'right') {
                prevSlide.classList.remove(...classesToRemove2);
                currentSlide.classList.remove(...classesToRemove2);
                nextSlide.classList.remove(...classesToRemove2);
           }
        }
    function move(direction) {
            
            direction === 'up' ?
            [prevSlider, currentSlider, nextSlider] = [currentSlider, nextSlider, nextSlider.nextElementSibling || slider.firstElementChild]: 
            direction === 'down' ? 
            [prevSlider, currentSlider, nextSlider] = [prevSlider.previousElementSibling || slider.lastElementChild, prevSlider, currentSlider]: 
            direction === 'left' ?
            [prevSlide, currentSlide, nextSlide] = [currentSlide, nextSlide, nextSlide.nextElementSibling || currentSlider.firstElementChild] :
            direction === 'right' ?
            [prevSlide, currentSlide, nextSlide] = [prevSlide.previousElementSibling || currentSlider.lastElementChild, prevSlide, currentSlide] :
            null;


            removeSliderClasses(direction)
            applyClasses();
    }
    
    startSlider();
    applyClasses();

    up.addEventListener('click', () => move('up'));
    down.addEventListener('click', () => move('down'));
    left.addEventListener('click', () => move('left'));
    right.addEventListener('click', () => move('right'));

}


const mainSlider = Slider(document.querySelector('.slideModule'));

// Do it with prototypes with to keep the slide positions constant. may also prevent fast click bugs

</script>
</html>
